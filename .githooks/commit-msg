#!/usr/bin/env bash
set -e

# Reject commits with AI attribution patterns
MSG=$(cat "$1")

if echo "$MSG" | grep -qi "Co-Authored"; then
    echo "ERROR: Commit message contains 'Co-Authored' - not allowed in this project."
    exit 1
fi

if echo "$MSG" | grep -qi "Generated by"; then
    echo "ERROR: Commit message contains 'Generated by' - not allowed in this project."
    exit 1
fi

exit 0
