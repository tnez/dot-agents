{
  "name": "dot-agents",
  "version": "0.7.1",
  "description": "A framework for building agentic workflows with personas and scheduled execution",
  "type": "module",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "dot-agents": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./daemon": {
      "types": "./dist/daemon/index.d.ts",
      "import": "./dist/daemon/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp -r src/daemon/web dist/daemon/",
    "postbuild": "echo '\nðŸ“¦ Build complete. Run `bun link` to use locally.\n'",
    "dev": "bun --watch src/cli/index.ts",
    "dev:daemon": "bun --watch src/daemon/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test tests/",
    "test:watch": "bun test --watch tests/",
    "spec": "vitest run specs/",
    "spec:watch": "vitest specs/",
    "test:all": "bun test tests/ && vitest run specs/",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepare": "git config core.hooksPath .githooks || true",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "files": [
    "dist",
    "internal",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tnez/dot-agents.git"
  },
  "homepage": "https://github.com/tnez/dot-agents#readme",
  "bugs": {
    "url": "https://github.com/tnez/dot-agents/issues"
  },
  "author": "tnez",
  "license": "MIT",
  "keywords": [
    "agents",
    "ai",
    "workflows",
    "automation",
    "claude",
    "llm",
    "cli"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^4.0.1",
    "commander": "^12.1.0",
    "cron": "^3.1.7",
    "execa": "^9.5.1",
    "express": "^4.21.1",
    "glob": "^11.0.0",
    "handlebars": "^4.7.8",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "@vitest/coverage-v8": "^4.0.16",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  }
}
